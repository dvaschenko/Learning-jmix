<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://newEntityDetailView.title"
      focusComponent="form">
    <data>
        <instance id="newEntityDc"
                  class="com.company.demo.entity.NewEntity">
            <fetchPlan extends="_base">
                <property name="creator" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <button id="doStuffBtn" text="Do"/>
        <formLayout id="form" dataContainer="newEntityDc" maxWidth="40em">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="secondFieldField" property="secondField"/>
            <entityPicker id="creatorField" property="creator">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
